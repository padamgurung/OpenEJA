package OpenEJA.DAL;


import java.sql.ResultSet;
import java.util.HashMap;
import java.util.List;

public interface IDBAdapter {
	
	public void connect();
	public void retrieve(String table, HashMap<?, ?> whereCondition, List<String> columns, String order, int offset, int limit );
	public void insert(String table, HashMap<?, ?> newData);
	public void update(String table, HashMap<?,?> modifiedData, HashMap<?, ?> whereCondition );
	public ResultSet delete(String table, HashMap<?, ?> whereCondition);	
}
