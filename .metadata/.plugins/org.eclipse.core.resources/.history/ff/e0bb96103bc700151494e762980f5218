package OpenEJA.Generate;

import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.LinkedList;
import java.util.List;

import OpenEJA.DAL.*;

public class EntityGenerator {

	private List<String> entityVariables;
	private String entityClass;
	private String entityBaseClass;
	private List<String> primaryKeys;
	private List<String> foreignKeys;
	private List<String> autoIncrementKeys;
	private List<String> uniqueKeys;
	private List<String> nullable;
	private List<String> type;
	private List<Integer> length;
	private DBAdapter dba;
	
	public EntityGenerator(){
		this.entityVariables = new LinkedList<String>();
		this.entityClass = "";
		this.entityBaseClass = "Entity";
		this.primaryKeys = new LinkedList<String>();
		this.foreignKeys = new LinkedList<String>();
		this.autoIncrementKeys = new LinkedList<String>();
		this.uniqueKeys = new LinkedList<String>();
		this.nullable = new LinkedList<String>();
		this.type = new LinkedList<String>();
		this.length = new LinkedList<Integer>();
		
		this.dba = DBFactoryAdapter.getDBAdapter();
	}

	public void generateEntity(String tableName, String databaseName){
		ResultSet rs = this.dba.tableDetail(tableName, databaseName);
		this.prepareKeys(rs);
	}
	
	public void getAllEntities(String databaseName){
		
	}
	private void prepareKeys(ResultSet rs){
		try {			
			while(rs.next()){				
				
				if(rs.getString("Key").equalsIgnoreCase("PRI")){
					this.primaryKeys.add(rs.getString("Field"));
				}
				if(rs.getString("Key").equalsIgnoreCase("MUL")){
					this.foreignKeys.add(rs.getString("Field"));
				}
				if(rs.getString("Key").equalsIgnoreCase("UNI")){
					this.uniqueKeys.add(rs.getString("Field"));
				}
				if(rs.getString("Extra").equalsIgnoreCase("auto_increment")){
					this.autoIncrementKeys.add(rs.getString("Field"));
				}
				if(rs.getString("Key").equalsIgnoreCase("YES")){
					this.nullable.add(rs.getString("Field"));
				}
				
			}
			for(String pkey : primaryKeys){
				System.out.println("Primary :" + pkey);
			}
			for(String fkey : foreignKeys){
				System.out.println("Foreign :" + fkey);
			}
			for(String aikey : autoIncrementKeys){
				System.out.println("Auto increment :" + aikey);
			}
			for(String ukey : uniqueKeys){
				System.out.println("Unique :" + ukey);
			}
			for(String nkey : nullable){
				System.out.println("Nullable :" + nkey);
			}
		} 
		catch (SQLException e) {			
			e.printStackTrace();
		}
		
	}
	private void getCode(){
		
	}
	private void createClassFile(String code){
		
	}
	private void resetVariables(){
		
	}
}
