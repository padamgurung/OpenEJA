package openeja.dp;

import java.lang.reflect.*;

public class DBFactoryAdapter {
	
	public DBAdapter getAdapter(String adapterType) throws InstantiationException, IllegalAccessException, ClassNotFoundException {
		
		if(adapterType == null){
			return null;
		}
		
		return (DBAdapter)Class.forName(adapterType).newInstance();
		
	}

}
